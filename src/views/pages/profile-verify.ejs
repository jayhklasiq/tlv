<div class="max-w-md mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8">Verify Profile Access</h1>
  
  <% if (errors && errors.length > 0) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <% errors.forEach(error => { %>
        <p><%= error %></p>
      <% }); %>
    </div>
  <% } %>

  <form action="/profile/send-code" method="POST" class="space-y-6">
    <div>
      <label class="block text-gray-400 mb-2">Email Address</label>
      <input type="email" name="email" required 
        class="w-full px-4 py-2 border rounded-lg bg-transparent border-gray-600 focus:border-white focus:outline-none">
    </div>
    <button type="submit" 
      class="w-full px-8 py-3 bg-white text-black font-semibold rounded-lg hover:bg-gray-200">
      Send Verification Code
    </button>
  </form>
</div> 
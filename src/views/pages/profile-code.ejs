<div class="max-w-md mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8">Enter Verification Code</h1>
  
  <% if (errors && errors.length > 0) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <% errors.forEach(error => { %>
        <p><%= error %></p>
      <% }); %>
    </div>
  <% } %>

  <form action="/profile/verify-code" method="POST" class="space-y-6">
    <input type="hidden" name="email" value="<%= email %>">
    <div>
      <label class="block text-gray-400 mb-2">Enter 6-Digit Code</label>
      <input type="text" name="code" required pattern="[0-9]{6}" maxlength="6"
        class="w-full px-4 py-2 border rounded-lg bg-transparent border-gray-600 focus:border-white focus:outline-none">
    </div>
    <div class="flex items-center">
      <input type="checkbox" name="rememberMe" id="rememberMe" class="mr-2">
      <label for="rememberMe" class="text-gray-400">Keep me signed in for 30 days</label>
    </div>
    <button type="submit" 
      class="w-full px-8 py-3 bg-white text-black font-semibold rounded-lg hover:bg-gray-200">
      Verify Code
    </button>
  </form>
</div>
          <script>
            function toggleProgramType() {
              const moduleOne = document.querySelector('input[name="moduleNumber"][value="1"]');
              const programTypeSection = document.getElementById('programTypeSection');

              if (moduleOne.checked) {
                programTypeSection.classList.remove('hidden');
                document.querySelectorAll('input[name="programType"]').forEach(input => {
                  input.required = true;
                });
              } else {
                programTypeSection.classList.add('hidden');
                document.querySelectorAll('input[name="programType"]').forEach(input => {
                  input.required = false;
                  input.checked = false;
                });
              }
            }

            function validateForm() {
              const phone = document.getElementById('phone');
              const countryCode = document.getElementById('countryCode');

              if (phone.value.startswith(countryCode)){
                phone = phone.slice(countryCode.length);
              }

              phone.value = countryCode + phone

              return true;
            }
          </script>

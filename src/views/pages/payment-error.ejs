<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-8">
    <div class="text-center mb-8">
      <div class="text-red-500 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-800 mb-2">Payment Error</h1>
      <p class="text-gray-600 mb-6">
        <%= error %>
      </p>
    </div>
    <div class="space-y-4">
      <% if (user) { %>
        <div class="bg-gray-50 p-4 rounded-lg">
          <h2 class="text-lg font-semibold text-gray-700 mb-2">Your Registration Details</h2>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <p class="text-gray-600">Name:</p>
              <p class="font-medium">
                <%= user.firstName %>
                  <%= user.lastName %>
              </p>
            </div>
            <div>
              <p class="text-gray-600">Email:</p>
              <p class="font-medium">
                <%= user.email %>
              </p>
            </div>
            <div>
              <p class="text-gray-600">Program:</p>
              <p class="font-medium">
                <%= user.programType %>
              </p>
            </div>
            <div>
              <p class="text-gray-600">Module:</p>
              <p class="font-medium">
                <%= user.moduleNumber %>
              </p>
            </div>
          </div>
        </div>
        <% } %>
          <div class="text-center space-y-4">
            <a href="/profile" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors"> Return to Profile </a>
            <p class="text-sm text-gray-500"> Need help? Contact our support team at <a href="mailto:info@tlvmasterclass.com" class="text-blue-600 hover:underline">info@tlvmasterclass.com</a>
            </p>
          </div>
    </div>
  </div>
</div>